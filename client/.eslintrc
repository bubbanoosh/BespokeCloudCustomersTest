{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": false,
        "es6": true
    },
    "globals": {
        "process": true
    },
    "rules": {
        "max-len": [ 
            1, 120, 2, {
                "ignoreComments": true
            }
        ],
        "babel/new-cap": 1,
        "babel/object-curly-spacing": [
            "error",
            "always"
        ],
        "babel/no-invalid-this": 1,
        "babel/semi": 1
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "babel"
    ]
}